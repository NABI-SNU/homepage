---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import { getAllPapers } from '~/utils/papers';
import PaperSearch from '~/components/papers/PaperSearch.svelte';

const papers = await getAllPapers();
const metadata = { title: 'Papers' };
---

<Layout metadata={metadata}>
  <HeroText tagline="Bibliography" title="Archive of NeuroAI Papers" />
  <PaperSearch papers={papers} client:load />
</Layout>
