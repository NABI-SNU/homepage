---
import Layout from '~/layouts/PageLayout.astro';
import Headline from '~/components/blog/Headline.astro';
import Steps from '~/components/widgets/Steps.astro';

const metadata = {
  title: 'Resources',
};
---

<Layout metadata={metadata}>
  <!-- Steps Widget ****************** -->
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline subtitle="Curated computational neuroscience papers each month"> Monthly  Highlights </Headline>
  </section>
  <Steps
    title="The Latest in NeuroAI"
    items={[
      {
        title: 'June 2025',
        description:
          "How Tiny RNNs, Inter-Brain Synchrony, and a Foundation Model Are Transforming Our Understanding of Cognition",
        icon: 'tabler:circle-number-6',
        href: '/monthly/june-2025',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

</Layout>
